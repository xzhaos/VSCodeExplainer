{
  "name": "gemini-code-explainer",
  "displayName": "Gemini Code Explainer",
  "description": "Explains every bit of code inside your editor using Gemini",
  "version": "1.0.8",
  "repository": {
    "type": "git",
    "url": "https://github.com/xzhaos/VSCodeExplainer"
  },
  "license": "MIT",
  "publisher": "xzhaos",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "icon": "assets/code-explainer-logo-ext.png",
  "activationEvents": [
    "onCommand:code-explainer.hello-world",
    "onCommand:code-explainer.explain",
    "onCommand:code-explainer.gen-code",
    "onLanguage",
    "onView:code-explainer"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-explainer",
          "title": "Code Explainer",
          "icon": "assets/code-explainer-logo.svg"
        }
      ]
    },
    "views": {
      "code-explainer": [
        {
          "id": "code-explainer",
          "name": "Code Explainer",
          "type": "webview",
          "icon": "assets/code-explainer-logo.svg",
          "contextualTitle": "CodeExplainer"
        }
      ]
    },
    "commands": [
      {
        "command": "code-explainer.hello-world",
        "category": "CodeExplainer",
        "title": "Hello World!"
      },
      {
        "command": "code-explainer.explain",
        "category": "CodeExplainer",
        "title": "Explain"
      },
      {
        "command": "code-explainer.gen-code",
        "category": "CodeExplainer",
        "title": "Generate Code"
      }
    ],
    "configuration": [
      {
        "type": "object",
        "title": "code-explainer",
        "properties": {
          "code-explainer.apiKey": {
            "type": "string",
            "default": "",
            "description": "API Key"
          },
          "code-explainer.model": {
            "type": "string",
            "default": "gemini-1.5-flash-latest",
            "description": "LLM model"
          },
          "code-explainer.streaming": {
            "type": "boolean",
            "default": false,
            "description": "generate code in streaming mode"
          },
          "code-explainer.hover": {
            "type": "boolean",
            "default": false,
            "description": "Show Explanation on Hover (Beta)"
          }
        }
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./extension.js --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@vscode/test-electron": "^2.3.2",
    "esbuild": "^0.19.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@google/generative-ai": "^0.14.1",
    "markdown-it": "^13.0.1"
  }
}
